<h1>Create Post</h1>

<%= form_with model: @post, url: user_posts_path(@current_user), method: :post, local: true, scope: :user_posts do |f| %>
  <div class="form">
    <%= f.text_field :title, placeholder: "Title" %>
  </div>

  <div class="form">
    <%= f.text_field :text, placeholder: "Post text" %>
  </div>

  <%= f.submit %>
<% end %>