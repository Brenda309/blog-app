  <h1>User informations</h1>
  <%= render "partials/user", user: @user %>
  <div class="bio">
    <h3>Bio</h3>
    <%= @user.bio %>
  </div>
<% if @user.recent_posts.size.zero? %>
    <div>
        <p>There are no posts yet</p>
      </div>
<% else %>
 <% @user.recent_posts.each do |post| %>
  <%= render "partials/post", {post: post, user: @user} %>
  <% end %>
  <button type="button">
    <%= link_to "See all posts", user_posts_path(@user)%>
  </button>
<% end %>
