<section class="users">
<div class = 'data>
    <%= link_to user_path(user.id) do %>
      <div class="photo">
        <img src=<%= user.photo %> alt=<%= user.name %>>
      </div>
      <div class="user__container">
        <div class="user__name"><%= user.name %></div>
        <div class="user__posts_counter">Number of Posts: <%= user.post_counter %></div>
      </div>
    <% end %>
    </div>
</section>